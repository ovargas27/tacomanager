<h1> Dashboard </h1>

<table >
  <tr>
    <th>Phone person</th>
    <th>Money person</th>
  </tr>
  <tr>
    <td><%= @phone_person.username %> </td>
    <td><%= @money_person.username%> </td>
  </tr>
</table>

<table class = "orders_list" id = "orders_list">
  <tr>
    <th>User</th>
    <th>Products</th>
    <th>Sub Total</th>
    <th>Shipping Cost</th>
    <th>Total</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% for order in @orders %>
    <tr class = "<%= cycle('odd', 'even')%>">
      <td><%=h order.user.username %></td>
      <td><ul><%= order.product_in_orders.collect {|product| "<li>#{product.product.name} (#{product.quantity}) </li>"}%></ul></td>
      <td><%=h order.sub_total %></td>
      <td><%=h order.shipping_cost %></td>
      <td><%=h order.total %></td>
      <td><%=h order.state %></td>
      <td><%= link_to "Show", order %></td>
      <td><%= link_to "Edit", edit_order_path(order) %></td>
      <td><%= link_to "Destroy", order, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
  <tr class = "table_foot">
    <td></td>
    <td></td>
    <td></td>
    <td>Total</td>
    <td><%= @total.to_s %></td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
</table>


