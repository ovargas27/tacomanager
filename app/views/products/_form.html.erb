<% form_for @product do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :vendor_id %><br />
    <%= select("product", "vendor_id", @vendors.collect {|vendor| [ vendor.name, vendor.id ] }, { :include_blank => true }) %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
