<% form_for @vendor do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
<p>
  <strong>Products:</strong>
  <ul><%= @vendor.products.collect {|product| "<li>#{product.name}</li>"}%></ul>
</p>
<p>
  <%= f.label :shipping_cost %><br />
  <%= f.text_field :shipping_cost %>
</p>
  <p><%= f.submit "Submit" %></p>
<% end %>
