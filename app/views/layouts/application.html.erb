<!DOCTYPE html>
<html>
<head>
  <title>Tacomanager</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="user_nav">
    <% if current_user %>
    <span>Hi <%= current_user.username %></span>
    <%= link_to "Logout", logout_path %>
    <% else %>
    <%= link_to "Login", login_path %> |
    <%= link_to "Register", new_user_path %>
    <% end %>
  </div>

  <p id = "app_notice"><%= flash[:notice] %></p>
  <p id = "app_notice"><%= flash[:error] %></p>

<%= yield %>

</body>
</html>
